<% @users.each do |user| %>
    <div class="user-wrapper">
    <%unless user.photo==nil%>
        <%= link_to image_tag(user.photo)%>
        <%end%>
        <div class="user-details">
          <h2><%= link_to user.name, "/users/#{user.id}"  %></h2>
          <h5>Number of posts: <%= user.posts_counter %></h5>
        </div>
    </div>
  <% end %>