<div class="user-container">
    <div class="user-wrapper">
         <%unless @user.photo==nil%>
        <%= image_tag(@user.photo)%>
        <%end%>
        <div class="user-details">
            <h2><%= @user.name %></h2>
            <h5>Number of posts: <%= @user.posts_counter %></h5>
        </div>
    </div>
    <div class="bio-wrapper">
        <h3>bio:</h3>
        <p><%= @user.bio %></p>
    </div>
    <div class= 'post-container'>
        <% @post.each_with_index do |post,index| %>
            <div class="post-wrapper">
                    <h2><%= link_to "Post # #{index+1}", "/users/#{@user.id}/posts/#{post.id}" %></h2>
                    <p><%= post.text %></p>
                    <h5>Comments: <%= post.comments_counter %> , Likes: <%= post.likes_counter %></h5>
            </div>
        <% end %>
    </div>
    <button><%= link_to "See all posts", "/users/#{@user.id}/posts/" %></button>
  
</div>
